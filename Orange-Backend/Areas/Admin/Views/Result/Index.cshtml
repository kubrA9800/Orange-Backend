@model ResultVM
@{
	ViewData["Title"] = "Index";
}

<div class="container mt-5">
	<h1 class="text-center mt-3 mb-3">Banner</h1>
	<div class="table-responsive">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>
						Image
					</th>

					<th>
						Heading
					</th>
					<th>
						Text
					</th>
					<th>
						Full Name
					</th>
					<th>
						Position
					</th>

					<th>
						Created Date
					</th>
					<th>
						Operations
					</th>

				</tr>
			</thead>
			<tbody>

				<tr>
					<td style="white-space:normal">
						<img style="width:150px; height:80px; border-radius:0" src="~/assets/img/about/@Model.Image" alt="image" />

					</td>
					<th>
						@Model.Head.Substring(0, (int)Math.Ceiling(Model.Text.Length * 0.1))...
					</th>
					<td style="white-space:normal">
						@Model.Text.Substring(0, (int)Math.Ceiling(Model.Text.Length * 0.1))...
					</td>
					<th>
						@Model.Name
					</th>
					<th>
						@Model.Position
					</th>
					
					<th>
						@Model.CreatedDate.ToString("dd/MM/yyyy")
					</th>
					<td>
						<a class="btn btn-info" asp-action="Detail" asp-route-id="@Model.Id">Detail</a>
						<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>

				</tr>


			</tbody>
		</table>
	</div>
</div>
