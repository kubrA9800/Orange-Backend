@model AchievmentEditVM
@{
    ViewData["Title"] = "Edit";
}

<div style="margin-right:100px" class="container mt-5">
    <h1>Edit</h1>
    <form class="forms-sample" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Head">Head</label>
            <div>
                <textarea style="border-color:grey;" asp-for="Head" id="Head" cols="70"></textarea>
                <span class="text-danger" asp-validation-for="Head"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Text">Text</label>
            <div>
                <textarea style="border-color:grey;" asp-for="Text" id="Text" cols="70"></textarea>
                <span class="text-danger" asp-validation-for="Text"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Results">Results</label>
            <div>
                <textarea style="border-color:grey;" asp-for="Results" id="Text" cols="70"></textarea>
                <span class="text-danger" asp-validation-for="Results"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Photo">Image</label>
            <div class="image">
                <img src="~/assets/img/about/@Model.Image" style="width:30%; height:15%" />
                <input asp-for="Photo" class="form-control">
                <span  asp-validation-for="Photo"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mr-2">Edit</button>
    </form>
    <div class="back mt-3">
        <a class="btn btn-info" asp-action="Index">Back</a>
    </div>
</div>
