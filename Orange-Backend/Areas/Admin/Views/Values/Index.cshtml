@model ValuesVM
@{
	ViewData["Title"] = "Index";
}

<div class="container mt-5">
	<h1 class="text-center mt-3 mb-3">Values</h1>
	<div class="table-responsive">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>
						Heading
					</th>

					<th>
						Text
					</th>

					<th>
						Created Date
					</th>
					<th>
						Operations
					</th>

				</tr>
			</thead>
			<tbody>

				<tr>
					<td style="white-space:normal">
						@Model.Head.Substring(0, (int)Math.Ceiling(Model.Text.Length * 0.1))...
					</td>
					<td style="white-space:normal">
						@Model.Text.Substring(0, (int)Math.Ceiling(Model.Text.Length * 0.1))...
					</td>

					<th>
						@Model.CreatedDate.ToString("dd/MM/yyyy")
					</th>
					<td>
						<a class="btn btn-info" asp-action="Detail" asp-route-id="@Model.Id">Detail</a>
						<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>

				</tr>


			</tbody>
		</table>
	</div>
</div>
