@model BlogCreateVM
@{
    ViewData["Title"] = "Create";
}

<div style="margin-right:100px" class="container mt-5">
    <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Head">Heading</label>
            <input asp-for="Head" class="form-control" />
            <span class="text-danger" asp-validation-for="Head"></span>
        </div>
        <div class="form-group">
            <label asp-for="Text">Text</label>
            <input asp-for="Text" class="form-control" />
            <span class="text-danger" asp-validation-for="Text"></span>
        </div>
        <div class="form-group">
            <label asp-for="Photo">Image</label>
            <input asp-for="Photo" class="form-control">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>

        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <a class="btn btn-light" asp-action="Index">Back</a>
    </form>
</div>