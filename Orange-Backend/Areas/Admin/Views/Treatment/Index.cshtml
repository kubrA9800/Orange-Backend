@model TreatmentVM
@{
	ViewData["Title"] = "Index";
}

<div class="container mt-5">
	<h1 class="text-center mt-3 mb-3">Treatment</h1>
	<div class="table-responsive">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>
						Image1
					</th>

					<th>
						Head
					</th>

					<th>
						Title
					</th>
					<th>
						Description
					</th>

					<th>
						Created Date
					</th>
					<th>
						Operations
					</th>

				</tr>
			</thead>
			<tbody>

				<tr>
					<td style="white-space:normal">
						<img style="width:150px; height:100px; border-radius:0" src="~/assets/img/@Model.Image1" alt="image" />

					</td>

			
					<td style="white-space:normal">
						@Model.Head
					</td>
					<th>
						@Model.Title
					</th>
					<th>
						@Model.Description.Substring(0, (int)Math.Ceiling(Model.Description.Length * 0.1))...
					</th>


					<th>
						@Model.CreatedDate.ToString("dd/MM/yyyy")
					</th>
					<td>
						<a class="btn btn-info" asp-action="Detail" asp-route-id="@Model.Id">Detail</a>
						<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>

				</tr>
			</tbody>
		</table>
	</div>
</div>