@model TreatmentEditVM
@{
    ViewData["Title"] = "Edit";
}

<div style="margin-right:100px" class="container mt-5">
    <h1>Edit</h1>
    <form class="forms-sample" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Head">Head</label>
            <div>
                <textarea style="border-color:grey;" asp-for="Head" id="Head" cols="70"></textarea>
                <span class="text-danger" asp-validation-for="Head"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <div>
                <textarea style="border-color:grey;" asp-for="Title" id="Title" cols="70"></textarea>
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <div>
                <textarea style="border-color:grey;" asp-for="Description" id="Description" cols="70"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Photo1">Image1</label>
            <div class="image">
                <img src="~/assets/img/@Model.Image1" style="width:25%; height:25%" />
                <input asp-for="Photo1" class="form-control">
                <span asp-validation-for="Photo1"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Photo2">Image2</label>
            <div class="image">
                <img src="~/assets/img/@Model.Image2" style="width:25%; height:25%" />
                <input asp-for="Photo2" class="form-control">
                <span asp-validation-for="Photo2"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mr-2">Edit</button>
    </form>
    <div class="back mt-3">
        <a class="btn btn-info" asp-action="Index">Back</a>
    </div>
</div>
