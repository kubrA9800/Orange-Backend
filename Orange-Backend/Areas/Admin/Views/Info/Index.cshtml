@model InfoVM

@{
	ViewData["Title"] = "Index";
}

<div class="container mt-5">
	<h1 class="text-center mt-3 mb-3">Info</h1>
	<div class="table-responsive">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>
						Title
					</th>
					<th>
						Description
					</th>
					<th>
						Created Date
					</th>
					<th>
						Operations
					</th>

				</tr>
			</thead>
			<tbody>

				<tr>
					
					<td class="py-1">
						@Model.Title

					</td>
					<td style="white-space:normal">
						@Model.Description.Substring(0, (int)Math.Ceiling(Model.Description.Length * 0.1))...

					</td>
					<th>
						@Model.CreatedDate.ToString("dd/MM/yyyy")
					</th>
					<td>
						<a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@Model.Id">Detail</a>
						<a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>

				</tr>


			</tbody>
		</table>
	</div>
</div>
