@model CategoryVM
@{
	ViewData["Title"] = "Detail";
}

@section css {
	<style>

		a {
			font-size: 16px !important;
			padding: 10px 21px !important;
		}

		input {
			font-size: 18px !important;
			font-weight: 600 !important;
		}

		textarea {
			height: 200px !important;
			font-size: 17px !important;
		}

		.active-image {
			border: 3px solid greenyellow;
		}

		img {
			width: 29%;
			height: 30%;
		}
	</style>
}

<div class="container my-5">
	<h1 class="text-center mt-3">Detail</h1>
	<div class="mt-3" style="width:40%">
		<img src="~/assets/img/@Model.Image" style="width:70%;height:70%" />
	</div>
	<div class="form-group mt-3">
		<label for="formFile" class="form-label my-2">Name</label>
		<input class="form-control" id="customFile" disabled asp-for="@Model.Name">
	</div>

	<div class="form-group mt-3">
		<label for="formFile" class="form-label my-2">Brands</label>
		@foreach (var item in Model.BrandCategories)
		{
			<input class="form-control" id="customFile" disabled asp-for="@item.Brand.Name">
		}
	</div>
	
	<div class="mt-3">
		<label for="formFile" class="form-label my-2">Created Date</label><br>
		@Model.CreatedDate.ToString("dd/MM/yyyy")
	</div>

	<div class="back mt-3">
		<a class="btn btn-dark text-white" asp-action="Index">Back</a>
	</div>


</div>
