@model RegisterVM
@{
    ViewData["Title"] = "Register";
}
@section css {
    <link rel="stylesheet" href="~/assets/css/account.css">
}
<section id="login-register">
    <div data-id="2" class="register-form box">
        <div class="container">
            <div class="head">
                <h1>Register</h1>
                <p>Please fill in the fields below</p>
            </div>
                <div class="form">
                    <form method="post" asp-controller="Account" asp-action="Register">
                    <div class="input">
                        <span>Full Name</span>
                        <input asp-for="FullName" type="text">
                        <span style="color:red; margin-bottom:10px" asp-validation-for="FullName"></span>
                    </div>
                    <div class="input">
                        <span>UserName</span>
                        <input asp-for="UserName" type="text">
                        <span style="color:red; margin-bottom:10px" asp-validation-for="UserName"></span>
                    </div>
                    <div class="input">
                        <span>Email</span>
                        <input asp-for ="Email" type="email">
                        <span style="color:red; margin-bottom:10px" asp-validation-for="Email"></span>
                    </div>
                    <div class="input">
                        <span>Password</span>
                        <input asp-for="Password" type="password">
                        <span style="color:red; margin-bottom:10px" asp-validation-for="Password"></span>

                    </div>
                    <div class="input">
                        <span>Confirm Password</span>
                        <input asp-for="ConfirmPassword" type="password">
                        <span style="color:red; margin-bottom:10px" asp-validation-for="ConfirmPassword"></span>
                    </div>

                    <button type="submit">Create</button>
                </form>
                </div>

          
            <div class="link d-flex">
                <h5>Already a member?</h5>
                <a data-id="1" asp-action="Login">Login</a>
            </div>
        </div>
    </div>

</section>

@section script {
    <partial name="_ValidationScriptsPartial"/>
    <script src="~/assets/js/account.js"></script>
}