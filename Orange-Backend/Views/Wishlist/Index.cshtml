@model List<WishlistDetailVM>
@{
    ViewData["Title"] = "Index";
}
@section css {
    <link rel="stylesheet" href="~/assets/css/wishlist.css">
}
<main>
    <section id="cart">
        <div class="container">
            <div class="empty-cart @(Model.Count == 0 ? "":"d-none")">
                <h1>Your Wishlist</h1>
                <p>No products in the wishlist.</p>
                <hr>
                <a asp-controller="Shop" asp-action="Index">Continue shopping</a>
            </div>
            <div class="full-cart @(Model.Count != 0 ? "":"d-none")">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Product</th>
                            <th scope="col"></th>
                            <th scope="col">Price</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderByDescending(m=>m.Id))
                        {
                            <tr >

                                <td>
                                    <a asp-controller="Shop" asp-action="ProductDetail" asp-route-id="@item.Id"><img src="~/assets/img/product/@item.Image" alt=""></a>

                                </td>
                                <td>
                                    <span>@item.Name</span>
                                    <a data-id="@item.Id" class="delete-product-from-wishlist" style="display: block;" href="#">Remove</a>
                                </td>

                                <td>$@item.Price</td>

                                <td>
                                    <a data-id="@item.Id" class="add-to-cart basket-icon item" href="#">Add To Cart</a>
                                </td>

                            </tr>
                        }
                        

                    </tbody>
                </table>
            </div>
        </div>

    </section>
</main>

@section script {
    <script src="~/assets/js/wishlist.js"></script>
    <script src="~/assets/js/basket.js"></script>
}

