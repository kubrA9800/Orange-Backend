@model AboutVM
@{
    ViewData["Title"] = "Index";
}
@section css {
    <link rel="stylesheet" href="~/assets/css/about.css">
}
<main>
    <section id="passionate">
        <div class="container">
            <div class="content">
                <div class="img">
                    <img src="~/assets/img/about/@Model.Banner.Image" alt="">
                </div>
                <div class="text">
                    <p>
                        @Model.Banner.Text
                    </p>
                </div>
            </div>
        </div>
    </section>

    <section id="values">
        <div class="container">
            <div class="content">
                <h1>OUR VALUES</h1>
                <p>
                   @Model.Value.Head
                </p>
                <p>
                    @Model.Value.Text
                </p>
            </div>

        </div>

    </section>


    <section id="leading">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-sm-12 col-md-6 col-lg-4">
                    <h1>We're leading development for modern teams.</h1>
                </div>
                <div class="col-sm-12 col-md-6 col-lg-4">
                    <h2>44%</h2>
                    <p>
                        Lorem ipsum dolor sit amet consectetur, adipisicing elit. Id quia ipsam unde error? Nesciunt,
                        repellat eaque illum .
                    </p>
                </div>
                <div class="col-sm-12 col-md-6 col-lg-4">
                    <div class="img">
                        <img src="~/assets/img/about/about2.webp" alt="">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="improvements">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-sm-12 col-lg-6">
                    <div class="img">
                        <img src="~/assets/img/about/about3.webp" alt="">
                    </div>
                </div>
                <div class="col-sm-12 col-lg-6">
                    <div class="text">
                        <h1>Over 40% traffic improvements</h1>
                        <p>
                            We are humans helping other humans succeed, and we believe that transparency is the
                            key to forging lasting relationships.
                        </p>
                        <h5>Rikke Thomsen</h5>
                        <h5>CEO & CTO</h5>
                    </div>
                </div>

            </div>
        </div>
    </section>
</main>

