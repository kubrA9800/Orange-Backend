@model List<BlogVM>
@{
    ViewData["Title"] = "Index";
}
@section css {
    <link rel="stylesheet" href="~/assets/css/blog.css">
}
<main>
    <section id="blogs-all">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-lg-9">
                    <div class="blog-left">
                        @foreach (var blog in Model.OrderBy(m=>m.CreatedDate))
                        {
                            <div class="blog-item">
                                <div class="row">
                                    <div class="col-sm-12 col-lg-6">
                                        <div class="img">
                                            <a asp-action="Detail" asp-route-id="@blog.Id"><img src="~/assets/img/@blog.Image" alt=""></a>

                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-lg-6">
                                        <div class="text">
                                            <a asp-action="Detail" asp-route-id="@blog.Id">@blog.Name</a>
                                            <hr>
                                            <p>
                                               @blog.Head
                                            </p>
                                            <a asp-action="Detail" asp-route-id="@blog.Id">More Details</a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        }
                       

                    </div>

                </div>
                <div class="col-sm-12 col-lg-3">
                    <div class="blog-right">
                        <div class="posts">
                            <h3>Popular Posts</h3>
                            <hr>
                            @foreach (var blog in Model.Take(2).OrderBy(m=>m.CreatedDate))
                            {
                                <div class="item">
                                    <div class="image">
                                        <img src="~/assets/img/@blog.Image" alt="">
                                    </div>
                                    <div class="text">
                                        <a href="">@blog.CreatedDate.ToString("dd/MM/yyyy")</a>
                                        <a asp-action="Detail" asp-route-id="@blog.Id">@blog.Name</a>
                                    </div>
                                </div>

                            }
                            

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
</main>

